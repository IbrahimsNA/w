
@{
    ViewBag.Title = "NewMsg";
    Layout = "~/Views/shared/DashBoardLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                
               <div class="subject row">
                  
                   <div class="form-group input-group mb-3 col-6">
                       <div class="input-group-prepend">
                           <span class="input-group-text  bg-app">To:</span>
                       </div>
                       <input type="text" class="form-control input-app" placeholder="e-mail">
                   </div>
                   <div class="form-group input-group mb-3 col-6">
                       <div class="input-group-prepend">
                           <span class="input-group-text  bg-app">CC:</span>
                       </div>
                       <input type="text" class="form-control input-app" placeholder="e-mail">
                   </div>
               </div>
                <div class="subject row">
                    <div class="form-group input-group mb-3 col-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text  bg-app">Subject:</span>
                        </div>
                        <input type="text" class="form-control input-app" placeholder="Subject">
                        
                    </div>
                   
                </div>
            </div>
            <div class="card-body">

                <table border="0" class="col-12">
                    <tr>
                        <td>
                            <textarea name="ck"></textarea>

                        </td>
                    </tr>
                </table>
                <button class="btn-send mt-3 float-right">Send <span class="mdi mdi-send"></span></button>
            </div>

        </div>


    </div>

</div>

@section head{
    @Scripts.Render("~/bundles/NewMsg")
}
